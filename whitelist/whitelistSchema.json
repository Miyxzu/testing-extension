{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "websiteName": {
            "type": "string",
            "minLength": 1
        },
        "url": {
            "type": "string",
            "format": "uri"
        },
        "permissions": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": ["notifications", "sounds"]
            }
        },
        "whitelisted": {
            "type": "boolean"
        }
    },
    "required": ["websiteName", "url", "permissions", "whitelisted"]
}